@model WebsiteForum.Models.LoginModel
@{
    ViewBag.Title = "Login account";
}
<link href="~/css/Account/Login.css" rel="stylesheet" type="text/css" />
<body>
    <div class="login-form">
        <h2 class="sign-in-label">Login</h2>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="form-group">
                <input type="email" class="form-control" asp-for="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            </div>
            <div class="d-flex flex-row align-items-center justify-content-between">
                <input type="submit" value="Enter the account" class="btn btn-outline-dark" />
                <input type="submit" class="btn btn-outline-dark" value="Registration" asp-action="Register" asp-controller="Account">
            </div>
        </form>
    </div>
</body>
