@model WebsiteForum.Models.RegisterModel

@{
    ViewBag.Title = "Register account";
}

<link href="~/css/Account/Register.css" rel="stylesheet" type="text/css" />

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <h2 class="card-title text-center">Register</h2>
                    <div class="card-body py-md-4">
                        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                            <div class="form-group">
                                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" asp-for="SurName" placeholder="SurName">
                                <span asp-validation-for="SurName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" asp-for="NickName" placeholder="NickName">
                                <span asp-validation-for="NickName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="date" class="form-control" asp-for="BirthDate" placeholder="BirthDate">
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" asp-for="ConfirmationPassword" placeholder="ConfirmationPassword">
                                <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
                            </div>
                            <div class="d-flex flex-row align-items-center justify-content-between">
                                <a asp-action="Login" asp-controller="Account">Login</a>
                                <button class="btn btn-primary">Create Account</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
