@model WebsiteForum.Models.Questions
@{
    ViewBag.Title = "Create new question";
}
<form asp-action="CreateQuestion" asp-controller="Forum">
    <div class="form-group">
        <label asp-for="QuestionText" class="control-label">QuestionText</label>
        <input type="text" asp-for="QuestionText" class="form-control" />
    </div>
    
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>